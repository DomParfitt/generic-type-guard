{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es5",
      "es6",
      "es7",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "typeRoots": [ "./types", "./node_modules/@types" ],
    "paths": {
      "*": [ "../types/*" ]
    },
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "baseUrl": "./src",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "outDir": "./dist"
  }
}
